modules = ["web", "python-3.12"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Run Full App"

[[workflows.workflow]]
name = "Start Backend"
author = 43403000
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn yolo_fastapi_server:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Run Full App"
author = 43403000
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn yolo_fastapi_server:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && python proxy.py"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"
REPLIT_CLEAR_PACKAGE_CACHE = "1"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "cd backend && uvicorn yolo_fastapi_server:app --host 0.0.0.0 --port 8000"]
build = ["sh", "-c", "uv sync && cp backend/best.pt backend/ || echo 'Warning: best.pt already in place'"]
